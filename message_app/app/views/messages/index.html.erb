<h1>Tweet一覧</h1>
<%= link_to "新しいTweetをする" , new_message_path %>
<table>
  <tr>
    <th>Tweet内容</th>
    <th>Tweet日時</th>
  </tr>
  <% @messages.each do |form| %>
    <tr>
      <td><%= form.content %></td>
      <td><%= form.created_at %></td>
      <td><%= link_to "Tweetの詳細", message_path(form.id) %></td>
      <td><%= link_to "Tweetの編集", edit_message_path(form.id) %></td>
    </tr>
  <% end %>
</table>
