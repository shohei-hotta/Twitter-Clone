<h1>あなたのTweet</h1>
<%= link_to "新しいTweetをする" , new_message_path %>
<table>
  <tr>
    <th>Tweet内容</th>
    <th>Tweet日時</th>
  </tr>
  <% @messages.each do |form| %>
    <tr>
      <td><%= form.content %></td>
      <td><%= form.created_at.strftime("%Y年%m月%d日 %H:%M") %></td>
      <td><%= link_to "詳細", message_path(form.id) %></td>
      <td><%= link_to "編集", edit_message_path(form.id) %></td>
      <td><%= link_to "削除", message_path(form.id), method: :delete, data: {confirm: "本当に削除していいですか？"} %></td>
    </tr>
  <% end %>
</table>
